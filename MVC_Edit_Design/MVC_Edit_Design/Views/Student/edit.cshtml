@model MVC_Edit_Design.Models.Student
@{
    ViewBag.Title = "edit";
    Layout = "~/Views/Shared/_layout2.cshtml";
}

<h2>edit</h2>
<form method="post" style="width:100%">
    <div class="form-group">
        @Html.HiddenFor(n => n.St_Id)

    </div>
    <div class="form-group">
        @Html.LabelFor(n => n.St_Fname)
        @Html.TextBoxFor(n => n.St_Fname, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.St_Fname)

    </div>
    <div class="form-group">
        @Html.LabelFor(n => n.St_Lname)
        @Html.TextBoxFor(n => n.St_Lname, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.St_Lname)

    </div>
    <div class="form-group">
        @Html.LabelFor(n => n.St_Age)
        @Html.TextBoxFor(n => n.St_Age, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.St_Age)

    </div>
    <div class="form-group">
        @Html.LabelFor(n => n.St_Address)
        @Html.TextBoxFor(n => n.St_Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.St_Address)

    </div>
    <div class="form-group">
        @Html.LabelFor(n => n.Dept_Id)
        @Html.DropDownListFor(n => n.Dept_Id, (SelectList)ViewBag.dept, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.Dept_Id)
    </div>
    <div class="form-group">
        @Html.HiddenFor(n => n.photo)
    </div>
    <div class="form-group">
    @Html.HiddenFor(n => n.CV)
    </div>
    <input type="submit" value="Update" />
</form>
@section my{
    <script src="~/Scripts/jquery-1.8.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}


